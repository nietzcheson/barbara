{% extends 'MoocsyBundle::moocsy-front-module.html.twig' %}

{% block moocsy_items %}
    <div class="panel panel-default">
      <div class="panel-body">

          {% if quiz_question is null %}
            <div class="alert alert-warning">
                Examen contestado
            </div>

            <ul class="list-group">
                {% for question in quiz_user %}
                    <li class="list-group-item">
                        <strong>{{ question.questions.question }}</strong>
                        <p class="lead">
                            {{ question.value }}
                        </p> </li>
                {% endfor %}
            </ul>
          {% else %}

          <form class="" action="" method="post">
              {{ form_widget(quiz_details_form) }}
              <button type="submit" class="btn btn-default">
                  Guardar
              </button>
          </form>
          {% endif %}
        </div>
    </div>


    {% include 'MoocsyBundle::Front/includes/items-description.html.twig'%}
{% endblock %}
