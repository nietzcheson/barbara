{% extends 'MoocsyBundle::moocsy_admin.html.twig' %}


{% block artesanus_section_subtitle %} Cursos {% endblock %}

{% block artesanus_section_body %}

    <div class="col-lg-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <form class="" action="" method="post">
                    {{ form_widget(modules_form) }}
                    <button type="submit" class="btn btn-default">
                        Guardar
                    </button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Items
                <a href="{{ path('moocsy_admin_course_modules_items_new', { course: course.slug, module: module.slug }) }}" class="btn btn-default">
                    Crear Ítem
                </a>
            </h3>
            </div>
            <div class="panel-body">

                {% if module.items|length == 0 %}
                    <div class="alert alert-warning">
                        <strong>No hay ítems creados</strong>
                    </div>
                {% else %}
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>
                                Type
                            </th>
                            <th>
                                Item
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in module.items %}
                        <tr>
                            <td>
                                [{{ item.itemsType }}]
                            </td>
                            <td>
                                {{ item.item }}
                            </td>
                            <td class="text-right col-md-4">
                                <div class="btn-group">
                                    <a href="{{ path('moocsy_admin_course_module_item', { course: course.slug, module: module.slug, item: item.slug}) }}" class="btn btn-default">
                                        <span class="glyphicon glyphicon-edit"></span>
                                    </a>
                                    <a href="{{ path('moocsy_admin_course_module_item_delete', { course: course.slug, module: module.slug, item: item.slug}) }}" class="btn btn-default">
                                        <span class="glyphicon glyphicon-trash"></span>
                                    </a>
                                </div>

                            </td>
                        </tr>
                        {% endfor %}

                    </tbody>
                </table>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
